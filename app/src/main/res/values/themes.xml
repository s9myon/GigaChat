<resources>
    <!-- Base application theme. -->
    <style name="Theme.GigaChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/dark_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sand</item>
        <item name="colorSecondaryVariant">@color/sand</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorSurfaceVariant">@color/gray_750</item>
        <item name="colorOnSurface">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_300</item>

        <!-- CustomViews default styles. -->
        <item name="emojiViewStyle">@style/Widget.GigaChat.EmojiView</item>
        <item name="flexboxLayoutStyle">@style/Widget.GigaChat.FlexboxLayout</item>

        <!-- Override standard text appearances. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GigaChat.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GigaChat.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GigaChat.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GigaChat.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GigaChat.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GigaChat.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GigaChat.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GigaChat.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GigaChat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GigaChat.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.GigaChat.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GigaChat.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.GigaChat.Overline</item>
    </style>
</resources>