<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="reactionViewStyle" format="reference" />
    <declare-styleable name="ReactionView">
        <attr name="emojiType" format="string" />
        <attr name="reactionsNumber" format="integer" />
    </declare-styleable>

    <attr name="flexboxLayoutStyle" format="reference" />
    <declare-styleable name="FlexboxLayout">
        <attr name="android:maxWidth" />
        <attr name="verticalGap" format="dimension" />
        <attr name="horizontalGap" format="dimension" />
    </declare-styleable>

    <attr name="messageViewStyle" format="reference" />
    <declare-styleable name="MessageView">
        <attr name="senderAvatarSrc" format="reference" />
        <attr name="senderName" format="string" />
        <attr name="messageText" format="string" />
    </declare-styleable>

    <attr name="messageBoxColor" format="color" />

    <declare-styleable name="ErrorView">
        <attr name="errorImageSrc" format="reference" />
        <attr name="errorText" format="reference"/>
        <attr name="buttonText" format="reference" />
    </declare-styleable>
</resources>