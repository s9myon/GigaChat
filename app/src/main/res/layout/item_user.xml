<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.shudss00.gigachat.presentation.widget.AvatarView
        android:id="@+id/avatarView_userAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="7dp"
        android:textColor="?attr/colorOnSurface"
        android:textAppearance="@style/TextAppearance.GigaChat.Headline6"
        tools:text="Darrell Steward" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="38dp"
        android:textSize="16sp"
        android:textColor="@color/gray_400"
        tools:text="darrell@company.com" />
</FrameLayout>