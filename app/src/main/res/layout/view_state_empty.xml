<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/errorView_imageSize"
        android:layout_height="@dimen/errorView_imageSize"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/placeholder_not_found" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/errorView_marginVertical"
        android:gravity="center_horizontal"
        android:text="@string/error_empty_history"
        android:textColor="?attr/colorOnSurface"
        android:textAppearance="@style/TextAppearance.GigaChat.Headline6"/>
</LinearLayout>