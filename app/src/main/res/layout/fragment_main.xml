<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.mainmenu.MainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_mainMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView_mainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        app:itemIconTint="@drawable/bg_item_bottom_nav_menu_main"
        app:itemTextColor="@drawable/bg_item_bottom_nav_menu_main"
        app:menu="@menu/bottom_nav_menu_main" />
</LinearLayout>