<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginTop="126dp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.GigaChat.UserProfileAvatar"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.GigaChat.Headline5"
            android:textColor="@color/white"
            android:textSize="32sp"
            tools:text="Darrell Steward" />

        <com.shudss00.gigachat.presentation.widget.OnlineStatusView
            android:id="@+id/textView_onlineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            tools:onlineStatus="active"/>

        <android.widget.Button
            android:id="@+id/button_logout"
            android:layout_width="184dp"
            android:layout_height="52dp"
            android:layout_margin="166dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="@string/button_logout"
            android:textAppearance="@style/TextAppearance.GigaChat.Headline5"
            android:background="@drawable/bg_logout_button" />
    </LinearLayout>
</ScrollView>